                     extras:"-e WORKSPACE=${WORKSPACE} -e ORACLESID=$params.ORACLESID -e '@/var/lib/jenkins/ansible.yaml'")
*/
		  sh "/usr/local/bin/ansible-playbook -i workspace/restoreOracle/restoreORACLE/ansible/inventory.ini restoreORACLE/ansible/restore.yaml --extra-vars 'ORACLESID=${params.ORACLESID} WORKSPACE=${WORKSPACE}' -e '@/var/lib/jenkins/ansible.yaml' --vault-id ansible_sudo_pass@/var/lib/jenkins/ansible.key "

             }
         }
    }
        
}
