pipeline {
    agent any

    parameters {
        string(name: "ORACLESID", defaultValue: "ORCL", trim: true, description: "ORACLE DATABASE SID")
    }

    stages {
        stage('Checkout') {
            steps {
                git branch:'main', url: 'https://github.com/pedromorenogcs/pruebasjenkins.git'
            }
        }
         stage('Ansible') {
             steps {
                  ansiblePlaybook inventory: 'ansible/oracleRestore/inventory.ini', playbook: 'ansible/oracleRestore/restore.yaml', extras:"-e WORKSPACE=${WORKSPACE} -e ORACLESID=$params.ORACLESID"
            }
        }
        
    }
}
